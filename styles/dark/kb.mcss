KBs {
  div.card {
    width: 300px;
    height: 96px;
    border-radius: 4px;
    padding-left: 1em;
    margin: 2em;
    float: left;
    box-shadow: 1px 1px 1px 1px rgba(0,0,0,0.9);
    background: #292929;

    div.desc {
      font-style: italic;
      margin: 1em 0;
    }

    div.version {
      span.number {
        text-decoration: underline;
        text-decoration-color: #c7c7c7;
      }
    }

  }
}
